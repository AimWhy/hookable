{
  "name": "hookable",
  "version": "3.0.0",
  "description": "Awaitable hooks for Node.js",
  "keywords": [
    "hook",
    "hookable",
    "plugin",
    "tapable",
    "tappable"
  ],
  "repository": "jsless/hookable",
  "license": "MIT",
  "contributors": [
    "Sebastien Chopin (@Atinux)",
    "Clark Du (@clarkdo)",
    "Pooya Parsa (@pi0)"
  ],
  "main": "./dist/hookable.js",
  "browser": "./dist/hookable.umd.js",
  "types": "./index.d.ts",
  "files": [
    "index.d.ts",
    "src",
    "dist"
  ],
  "scripts": {
    "build": "bili --module-name hookable --minify --format cjs,umd,es src/hookable.js",
    "lint": "eslint src",
    "release": "yarn test && yarn build && standard-version && git push --follow-tags && npm publish",
    "test": "yarn lint && yarn jest"
  },
  "devDependencies": {
    "babel-jest": "latest",
    "bili": "latest",
    "codecov": "latest",
    "eslint": "latest",
    "eslint-config-standard": "latest",
    "eslint-plugin-import": "latest",
    "eslint-plugin-jest": "latest",
    "eslint-plugin-node": "latest",
    "eslint-plugin-promise": "latest",
    "eslint-plugin-standard": "latest",
    "jest": "latest",
    "standard-version": "latest"
  }
}
